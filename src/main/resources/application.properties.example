# Spring Boot Application Configuration

# Server Configuration
server.port=8080

# Database Configuration (Supabase PostgreSQL)
# IMPORTANT: Use environment variables for sensitive data!
# Set these as environment variables or use application-local.properties (not committed to git)
spring.datasource.url=${DB_URL:jdbc:postgresql://<AWS Server Region>.pooler.supabase.com:6543/postgres}
spring.datasource.username=${DB_USERNAME:<Database Username>}
spring.datasource.password=${DB_PASSWORD:<Database Password>}
spring.datasource.hikari.maximum-pool-size=5
spring.datasource.hikari.connection-timeout=30000
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# Supabase Auth Configuration
# IMPORTANT: The supabase.url should point to your Supabase REST API (without port or /postgres)
supabase.url=${SUPABASE_URL:<Supabase URL>}
supabase.api.key=${SUPABASE_API_KEY:<Supabase Anon Key>}

# Backup Configuration
# Directory where application-level backups are stored
backup.directory=./backups
